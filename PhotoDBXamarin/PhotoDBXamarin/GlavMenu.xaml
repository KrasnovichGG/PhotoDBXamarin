<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             x:Class="PhotoDBXamarin.MainPage" Visual="Material">
    <StackLayout Margin="30,30,30,10">
        <StackLayout>
            <Entry x:Name="Namelabel" Placeholder="Введите название" TextColor="Black" BackgroundColor="LightGray" Keyboard="Text"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" HeightRequest="60" Margin="0,20,0,0">
            <Button
            x:Name="BtnGaleru"
                HorizontalOptions="Start"
                Clicked="GetPhotoAsync"
                BorderColor="LightBlue"
                BorderWidth="1"
                WidthRequest="150"
                BackgroundColor="DeepSkyBlue"
                TextColor="White"
                Text="Галерея"
                CornerRadius="60"/>
            <Button
            x:Name="BtnKamera"
                Clicked="TakePhotoAsync"
                HorizontalOptions="EndAndExpand"
                WidthRequest="150"
                BorderColor="LightBlue"
                BorderWidth="1"
                BackgroundColor="DeepSkyBlue"
                TextColor="White"
                Text="Камера"
                CornerRadius="60"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" HeightRequest="60" Margin="0,20,0,0">
            <Button
                x:Name="BtnADD"
                Clicked="BtnADD_Clicked"
                HorizontalOptions="FillAndExpand"
                WidthRequest="150"
                BorderColor="LightBlue"
                BorderWidth="1"
                BackgroundColor="DeepSkyBlue"
                TextColor="White"
                Text="Добавить"
                CornerRadius="60"/>
            </StackLayout>
        <ScrollView>
            <ListView
            IsPullToRefreshEnabled="True"
            x:Name="ImageList"
            HasUnevenRows="True"
            ItemTapped="ImageList_ItemTapped">
            <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell> 
                            <SwipeView>
                            <SwipeView.RightItems>
                                    <SwipeItems>
                                        <SwipeItem 
                                           Text="Delete"
                                           IconImageSource="deleteggwp.png"
                                            Clicked="SwipeItem_Clicked"
                                            CommandParameter="{Binding Id}"
                                           BackgroundColor="Red"/>      
                                    </SwipeItems>
                            </SwipeView.RightItems>
                            <StackLayout>
                            <Label Text="{Binding Name}" TextColor="Black" FontSize="20" Padding="20"/>
                                    <ff:CachedImage Margin="10,20" Source="{Binding Imagepath}"/>
                                </StackLayout>
                            </SwipeView>
                        </ViewCell>
            </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </ScrollView>
    </StackLayout>
</ContentPage>
